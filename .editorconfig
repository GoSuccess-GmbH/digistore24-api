# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_style = space
indent_size = 4
max_line_length = 120

# Composer, NPM, Markdown
[{composer.json,package.json}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

# Batch files
[*.{cmd,bat}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab
