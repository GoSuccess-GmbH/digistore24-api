{
    "name": "gosuccess/digistore24-api",
    "description": "Modern PHP API client for Digistore24 with PHP 8.4 features",
    "type": "library",
    "license": "MIT",
    "keywords": ["digistore24", "api", "client", "payment", "ecommerce", "php8.4"],
    "autoload": {
        "psr-4": {
            "GoSuccess\\Digistore24\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GoSuccess\\Digistore24\\Api\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "GoSuccess",
            "homepage": "https://gosuccess.io"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "symfony/yaml": "^7.3"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
