{
    "name": "gosuccess/digistore24-api",
    "description": "Modern PHP API client for Digistore24 with PHP 8.4 features",
    "version": "2.0.0",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "digistore24",
        "api",
        "client",
        "payment",
        "ecommerce",
        "php8.4",
        "affiliate",
        "marketplace"
    ],
    "homepage": "https://github.com/GoSuccess-GmbH/digistore24-api",
    "readme": "README.md",
    "autoload": {
        "psr-4": {
            "GoSuccess\\Digistore24\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GoSuccess\\Digistore24\\Api\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "GoSuccess GmbH",
            "homepage": "https://gosuccess.io",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "infection/infection": "^0.31.7",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.0",
        "symfony/yaml": "^7.3"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage --coverage-text",
        "test:unit": "phpunit --testsuite Unit",
        "test:integration": [
            "@putenv DS24_INTEGRATION_TESTS=1",
            "phpunit --testsuite Integration"
        ],
        "test:integration:safe": [
            "@putenv DS24_INTEGRATION_TESTS=1",
            "phpunit --testsuite Integration --group safe"
        ],
        "mutation": "infection --threads=4 --show-mutations",
        "mutation:report": "infection --threads=4 --show-mutations --no-progress",
        "mutation:baseline": "infection --threads=4 --show-mutations --only-covered",
        "analyse": "phpstan analyse --memory-limit=2G",
        "analyse:baseline": "phpstan analyse --generate-baseline --memory-limit=2G",
        "cs:check": "php-cs-fixer fix --dry-run --diff --verbose",
        "cs:fix": "php-cs-fixer fix --verbose",
        "check": [
            "@cs:check",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "infection/extension-installer": true,
            "php-http/discovery": false
        }
    },
    "support": {
        "issues": "https://github.com/GoSuccess-GmbH/digistore24-api/issues",
        "source": "https://github.com/GoSuccess-GmbH/digistore24-api",
        "docs": "https://github.com/GoSuccess-GmbH/digistore24-api#readme",
        "security": "https://github.com/GoSuccess-GmbH/digistore24-api/security/policy"
    }
}
