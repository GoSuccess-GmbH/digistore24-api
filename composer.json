{
    "name": "gosuccess/php-ds24-api-wrapper",
    "description": "PHP API Wrapper for Digistore24.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "GoSuccess\\Digistore24\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GoSuccess\\Digistore24\\Api\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "GoSuccess",
            "homepage": "https://gosuccess.io"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
