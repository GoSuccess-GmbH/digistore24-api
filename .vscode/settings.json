{
    "php.version": "8.4",
    "editor.formatOnSave": true,
    "editor.rulers": [
        120
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // PHP Settings
    "[php]": {
        "editor.defaultFormatter": "junstyle.php-cs-fixer",
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    // PHP CS Fixer
    "php-cs-fixer.executablePath": "${workspaceFolder}/vendor/bin/php-cs-fixer",
    "php-cs-fixer.onsave": true,
    "php-cs-fixer.rules": "@PSR12",
    "php-cs-fixer.config": "${workspaceFolder}/.php-cs-fixer.dist.php",
    // Intelephense
    "intelephense.stubs": [
        "apache",
        "bcmath",
        "bz2",
        "calendar",
        "com_dotnet",
        "Core",
        "ctype",
        "curl",
        "date",
        "dba",
        "dom",
        "enchant",
        "exif",
        "fileinfo",
        "filter",
        "fpm",
        "ftp",
        "gd",
        "hash",
        "iconv",
        "imap",
        "interbase",
        "intl",
        "json",
        "ldap",
        "libxml",
        "mbstring",
        "mcrypt",
        "meta",
        "mssql",
        "mysqli",
        "oci8",
        "odbc",
        "openssl",
        "pcntl",
        "pcre",
        "PDO",
        "pdo_ibm",
        "pdo_mysql",
        "pdo_pgsql",
        "pdo_sqlite",
        "pgsql",
        "Phar",
        "posix",
        "pspell",
        "readline",
        "recode",
        "Reflection",
        "regex",
        "session",
        "shmop",
        "SimpleXML",
        "snmp",
        "soap",
        "sockets",
        "sodium",
        "SPL",
        "sqlite3",
        "standard",
        "superglobals",
        "sybase",
        "sysvmsg",
        "sysvsem",
        "sysvshm",
        "tidy",
        "tokenizer",
        "wddx",
        "xml",
        "xmlreader",
        "xmlrpc",
        "xmlwriter",
        "Zend OPcache",
        "zip",
        "zlib"
    ],
    "intelephense.files.maxSize": 5000000,
    "intelephense.environment.phpVersion": "8.4.0",
    // PHPStan
    "phpstan.enabled": true,
    "phpstan.level": "max",
    "phpstan.configFile": "${workspaceFolder}/phpstan.neon",
    // PHPUnit
    "phpunit.phpunit": "${workspaceFolder}/vendor/bin/phpunit",
    "phpunit.args": [
        "--no-coverage"
    ],
    // File Associations
    "files.associations": {
        "*.php": "php",
        ".php-cs-fixer.dist.php": "php",
        "phpstan.neon": "yaml"
    },
    // File Exclusions
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/.phpunit.cache": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/vendor": true,
        "**/.phpunit.cache": true
    },
    // Testing
    "testing.automaticallyOpenPeekView": "failureInVisibleDocument"
}
