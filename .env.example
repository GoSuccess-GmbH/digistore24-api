# Digistore24 API Integration Tests Configuration
# Copy this file to .env.local and fill in your test data
# IMPORTANT: Use SANDBOX/TEST data only to avoid real charges!

# ==============================================================================
# API Credentials
# ==============================================================================

# Your Digistore24 API Key
DS24_API_KEY=your-api-key-here

# ==============================================================================
# Test Products (use test/sandbox products only!)
# ==============================================================================

# Product IDs for testing
DS24_TEST_PRODUCT_ID=12345
DS24_TEST_PRODUCT_ID_2=67890

# Product with payment plan
DS24_TEST_PRODUCT_WITH_PAYMENT_PLAN=11111

# Affiliate product
DS24_TEST_AFFILIATE_PRODUCT=22222

# ==============================================================================
# Test Purchases (use test purchases only!)
# ==============================================================================

# A valid test purchase ID
DS24_TEST_PURCHASE_ID=TESTORDER123

# Purchase with rebilling capability (for createBillingOnDemand)
DS24_TEST_PURCHASE_WITH_REBILLING=REBILL456

# Purchase with tracking data
DS24_TEST_PURCHASE_WITH_TRACKING=TRACK789

# ==============================================================================
# Test Buyers (use test buyer data only!)
# ==============================================================================

# Test buyer email
DS24_TEST_BUYER_EMAIL=test@example.com

# Test buyer ID
DS24_TEST_BUYER_ID=BUYER123

# ==============================================================================
# Test Affiliates
# ==============================================================================

# Test affiliate ID
DS24_TEST_AFFILIATE_ID=AFF12345

# Test affiliate email
DS24_TEST_AFFILIATE_EMAIL=affiliate@example.com

# ==============================================================================
# Test Vouchers
# ==============================================================================

# Test voucher code
DS24_TEST_VOUCHER_CODE=TEST20

# ==============================================================================
# Test URLs
# ==============================================================================

# Test IPN URL
DS24_TEST_IPN_URL=https://example.com/ipn

# Test redirect URL
DS24_TEST_REDIRECT_URL=https://example.com/success

# ==============================================================================
# Other Test Data
# ==============================================================================

# Test campaign key
DS24_TEST_CAMPAIGN_KEY=testcampaign2024

# Test tracking key
DS24_TEST_TRACKING_KEY=trackingkey123

# Test custom value
DS24_TEST_CUSTOM_VALUE=test-custom-value
